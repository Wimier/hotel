<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.hotel.mapper.HotelRoomMapper">
    
    <resultMap type="HotelRoom" id="HotelRoomResult">
        <result property="id"    column="id"    />
        <result property="hotelId"    column="hotel_id"    />
        <result property="roomTypeId"    column="room_type_id"    />
        <result property="roomNo"    column="room_no"    />
        <result property="floor"    column="floor"    />
        <result property="status"    column="status"    />
    </resultMap>

    <sql id="selectHotelRoomVo">
        select id, hotel_id, room_type_id, room_no, floor, status from hotel_room
    </sql>

    <select id="selectHotelRoomList" parameterType="HotelRoom" resultMap="HotelRoomResult">
        <include refid="selectHotelRoomVo"/>
        <where>  
            <if test="hotelId != null "> and hotel_id = #{hotelId}</if>
            <if test="roomTypeId != null "> and room_type_id = #{roomTypeId}</if>
            <if test="roomNo != null  and roomNo != ''"> and room_no = #{roomNo}</if>
            <if test="floor != null "> and floor = #{floor}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectHotelRoomById" parameterType="Long" resultMap="HotelRoomResult">
        <include refid="selectHotelRoomVo"/>
        where id = #{id}
    </select>

    <insert id="insertHotelRoom" parameterType="HotelRoom" useGeneratedKeys="true" keyProperty="id">
        insert into hotel_room
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="hotelId != null">hotel_id,</if>
            <if test="roomTypeId != null">room_type_id,</if>
            <if test="roomNo != null and roomNo != ''">room_no,</if>
            <if test="floor != null">floor,</if>
            <if test="status != null">status,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="hotelId != null">#{hotelId},</if>
            <if test="roomTypeId != null">#{roomTypeId},</if>
            <if test="roomNo != null and roomNo != ''">#{roomNo},</if>
            <if test="floor != null">#{floor},</if>
            <if test="status != null">#{status},</if>
         </trim>
    </insert>

    <update id="updateHotelRoom" parameterType="HotelRoom">
        update hotel_room
        <trim prefix="SET" suffixOverrides=",">
            <if test="hotelId != null">hotel_id = #{hotelId},</if>
            <if test="roomTypeId != null">room_type_id = #{roomTypeId},</if>
            <if test="roomNo != null and roomNo != ''">room_no = #{roomNo},</if>
            <if test="floor != null">floor = #{floor},</if>
            <if test="status != null">status = #{status},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteHotelRoomById" parameterType="Long">
        delete from hotel_room where id = #{id}
    </delete>

    <delete id="deleteHotelRoomByIds" parameterType="String">
        delete from hotel_room where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>